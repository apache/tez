<div class="{{if env.app.isStandalone 'standalone' 'wrapped'}} {{if env.ENV.isIE 'ie'}}">
  <div class="footer-pusher">

    <div class="header">
      <div class="lr-margin content">
        <LinkTo @route="application" class="logo">
          <img src="assets/images/logo.png" width="70px"/>
        </LinkTo>

        <div class="breadcrumb-container">
          <EmBreadcrumbs @items={{this.prefixedBreadcrumbs}} />
        </div>

        <div class="ui-info">
          {{#if env.app.buildVersion}}
            <span>Version <b>{{env.app.buildVersion}}</b></span>
          {{/if}}
          <span>
            <a href={{env.app.hrefs.help}} target="_blank" rel="noopener noreferrer">
              <i class="fa fa-question-circle"></i>
            </a>
          </span>
        </div>
      </div>
    </div>

    <div class="lr-margin">
      {{outlet}}
    </div>
    <div class="footer-frame"> </div>
  </div>

  <div class="footer">
    <div class="lr-margin content">
      <a href={{env.app.hrefs.license}} target="_blank" rel="noopener noreferrer">
        Licensed under the Apache License, Version 2.0.
      </a>
      <div class="ui-info">
        {{#if env.app.timezone}}
          <span>Timezone <b>{{env.app.timezone}}</b></span>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{outlet "modal"}}

