<div class="input-group">
  {{#if (eq this.tableDefinition.searchType "manual")}}
    <span class="input-group-btn">
      <select class="type-select form-control btn btn-default" onchange={{action (mut this.actualSearchType) value="target.value"}} aria-label="Select table search type">
        {{#each this.searchTypes as |searchType|}}
          <option value={{searchType}} selected={{eq searchType this.actualSearchType}}>
            {{searchType}}
          </option>
        {{/each}}
      </select>
    </span>
  {{/if}}

  <Input @type="text" class="form-control" placeholder="Search..." @enter="search" @value={{this.text}} aria-label="Search table acording to search type" />

  <span class="input-group-btn">
    <button class="btn btn-default {{if this.dataProcessor.isSearching 'animated-stripes'}}" type="button" {{action "search"}}>
      {{#if this.dataProcessor.isSearching}}
        Searching...
      {{else}}
        {{#if (eq this.tableDefinition.searchType "auto")}}
          {{this.actualSearchType}}
        {{/if}}
        Search
      {{/if}}
    </button>
  </span>
</div>
