<ul class="nav nav-tabs">
  {{#each this.normalizedTabs as |tab|}}
    <li class="{{if tab.active 'active'}}">
      <LinkTo @route={{tab.routeName}}>
        {{tab.text}}
      </LinkTo>
    </li>
  {{/each}}
</ul>
<div class="refresh-ui">
  <span class="text-elements">
    <span class="auto-refresh {{unless this.autoRefreshVisible 'no-visible'}}">
      <Input @type="checkbox" name="autoEnabled" @checked={{this.autoRefreshEnabled}} aria-label="Enable auto-refresh"/>
      Auto Refresh
      <br/>
    </span>
    {{#if this.loadTime}}
      Last refreshed at <b><DateFormatter @content={{this.loadTime}} /></b>
    {{else}}
      Load time not available!
    {{/if}}
  </span>
  <button type="button" class="btn btn-success" {{action "refresh"}}>
    <i class='fas fa-sync'></i> Refresh
  </button>
</div>
