<div class="field-name" {{action "toggleValueDisplay"}} title={{this.data.column.headerTitle}}>
  <div class="field-title">{{this.data.column.headerTitle}}</div>
  <div class="field-count">({{this.data.facets.length}})</div>
  <a class="all-button" title={{this.allButtonTitle}} {{action "selectAll" bubbles=false}}>All</a>
</div>

<ul class="value-list">
  <Input @type="text" class="filter-box" @value={{this.filterText}} placeholder="Filter" aria-label="Filter facet"/>

  {{#if this.showPagination}}
    <div class="pagination-controls">
      {{this.currentPage}}/{{this.totalPages}}
      <div class="arrows">
        <span {{action "changePage" -1}} class="{{if this.showPrevious 'active'}}">&#9668;</span>
        <span {{action "changePage" 1}} class="{{if this.showNext 'active'}}">&#9658;</span>
      </div>
    </div>
  {{/if}}

  {{#each this.paginatedFacets key="value" as |facet|}}
    <li title={{facet.displayText}}>
      <div class="checkbox-container">
        <input type="checkbox" checked={{facet.checked}} onclick={{action "clickedCheckbox" facet}} aria-label="Select facet"/>
      </div>
      <div class="facet-value">{{facet.displayText}}</div>
      <a class="only-button" {{action "clickedOnly" facet}}>only</a>
      <a class="facet-count">{{facet.count}}</a>
    </li>
  {{else}}
    <span class="filter-message">No fields!</span>
  {{/each}}
</ul>
