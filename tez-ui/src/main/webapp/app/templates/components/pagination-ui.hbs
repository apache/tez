<ul class="page-list">
  {{#if this.showFirst}}
    <li title="Go to first page" class="clickable" {{action 'changePage' 1}}>
      First
    </li>
  {{/if}}
  {{#each this._possiblePages as |page|}}
    <li class="{{if page.isCurrent 'is-current' 'clickable'}}" {{action 'changePage' page.pageNum}}>
      {{#if page.isLoadPage}}
        {{#if this.tableDefinition.loadingMore}}
          <i class="fa fa-spinner fa-spin" aria-hidden="true"></i>
        {{else}}
          {{page.pageNum}}
        {{/if}}
      {{else}}
        {{page.pageNum}}
      {{/if}}
    </li>
  {{/each}}
</ul>

<div class='row-select'>
  <select title="Select rows to display" class="form-control" onchange={{action "rowSelected" value="target.value"}} aria-label="Select number of rows to display per page">
    {{#each this.rowCountOptions as |rowCountOption|}}
      <option value={{rowCountOption.value}} selected={{rowCountOption.selected}}>
        {{rowCountOption.value}} Rows
      </option>
    {{/each}}
  </select>
</div>
