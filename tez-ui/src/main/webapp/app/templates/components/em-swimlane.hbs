<div class="process-names">
  {{#each this.normalizedProcesses key="_id" as |process|}}
    {{component this.nameComponent process=process showSwimlaneTooltip=this.showSwimlaneTooltip hideSwimlaneTooltip=this.hideSwimlaneTooltip routeToVertex=this.routeToVertex}}
  {{/each}}
  <div class="consolidated-view-label">
    Consolidated
  </div>
</div><div class="process-visuals" {{action 'routeToVertex'}}>
  <div class="zoom-panel">
    {{#each this.normalizedProcesses key="_id" as |process|}}
      {{component this.visualComponent process=process processor=this.processor showSwimlaneTooltip=this.showSwimlaneTooltip hideSwimlaneTooltip=this.hideSwimlaneTooltip routeToVertex=this.routeToVertex}}
    {{/each}}

    {{#if this.consolidate}}
      <div class="consolidated-view">
        {{#each this.normalizedProcesses key="_id" as |process|}}
          <EmSwimlaneConsolidatedProcess @focusedProcess={{this.focusedProcess}} @process={{process}} @processor={{this.processor}} @showSwimlaneTooltip={{this.showSwimlaneTooltip}} @hideSwimlaneTooltip={{this.hideSwimlaneTooltip}}  @routeToVertex={{this.routeToVertex}}/>
        {{/each}}
      </div>
    {{/if}}

    <EmSwimlaneRuler @scroll={{this.scroll}} @processor={{this.processor}} @zoom={{this.zoom}} />

  </div>
</div>

<EmTooltip @contents={{this.tooltipContents}} />
