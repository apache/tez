{{#if this.loaded}}
  <table class='detail-list'>
    <thead>
      <tr>
        <th colspan="2">Details</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Task ID</td>
        <td>{{this.model.entityID}}</td>
      </tr>
      <tr>
        <td>Vertex ID</td>
        <td>{{this.model.vertexID}}</td>
      </tr>
      <tr>
        <td>Status</td>
        <td><EmTableStatusCell @content={{this.model.status}} /></td>
      </tr>
      <tr>
        <td>Progress</td>
        <td><EmTableProgressCell @content={{this.model.progress}} /></td>
      </tr>
      <tr>
        <td>Start Time</td>
        <td><DateFormatter @content={{this.model.startTime}} /></td>
      </tr>
      <tr>
        <td>End Time</td>
        <td><DateFormatter @content={{this.model.endTime}} /></td>
      </tr>
      <tr>
        <td>Duration</td>
        <td>{{txt this.model.duration type="duration"}}</td>
      </tr>
      <tr>
        <td>Logs</td>
        <td>
          {{#if this.attempts}}
            {{#each this.attempts as |attempt|}}
              <dag class="display-block">
                Attempt {{attempt.index}} :&nbsp;
                {{#if attempt.logURL}}
                  <a href={{attempt.logURL}} target="_blank" rel="noopener noreferrer">
                    <i class="fa fa-file-o" aria-hidden="true"></i> View
                  </a>
                  &nbsp;
                  <a href={{attempt.logURL}} target="_blank" download rel="noopener noreferrer">
                    <i class="fa fa-download" aria-hidden="true"></i> Download
                  </a>
                {{else}}
                  <span class="txt-message">Not Available!</span>
                {{/if}}
              </dag>
            {{/each}}
          {{else}}
            <i class="fa fa-spinner fa-spin"></i> Loading...
          {{/if}}
        </td>
      </tr>
      <tr>
        <td>Container Logs</td>
        <td>
          {{#if this.attempts}}
            {{#each this.attempts as |attempt|}}
              <dag class="display-block">
                Attempt {{attempt.index}} :&nbsp;
                {{#if attempt.containerLogURL}}
                  <a href={{attempt.containerLogURL}} target="_blank" rel="noopener noreferrer">
                    <i class="fa fa-file-o" aria-hidden="true"></i> View
                  </a>
                  &nbsp;
                  <a href={{attempt.containerLogURL}} target="_blank" download rel="noopener noreferrer">
                    <i class="fa fa-download" aria-hidden="true"></i> Download
                  </a>
                {{else}}
                  <span class="txt-message">Not Available!</span>
                {{/if}}
              </dag>
            {{/each}}
          {{else}}
            <i class="fa fa-spinner fa-spin"></i> Loading...
          {{/if}}
        </td>
      </tr>
    </tbody>
  </table>

  <table class='detail-list'>
    <thead>
    <tr>
      <th colspan="2">Stats</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td>Failed Task Attempts</td>
        <td><StatsLink @value={{this.model.failedTaskAttempts}} @routeName="this.task.attempts" @statsType="FAILED" /></td>
      </tr>
    </tbody>
  </table>

  {{#if this.model.diagnostics}}
    <div class="panel panel-danger">
      <div class="panel-heading">
        Diagnostics
      </div>
      <div class="diagnostics">
        {{this.model.diagnostics}}
      </div>
    </div>
  {{/if}}

{{else}}
  <Loading/>
{{/if}}
